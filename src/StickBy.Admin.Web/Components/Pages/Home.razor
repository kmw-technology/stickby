@page "/"
@using StickBy.Admin.Web.Services
@inject IAdminService AdminService
@rendermode InteractiveServer

<PageTitle>StickBy Admin Dashboard</PageTitle>

<div class="page-header">
    <h1 class="page-title">Dashboard</h1>
</div>

@if (_stats == null)
{
    <div class="flex items-center gap-2">
        <span class="loading-spinner"></span>
        <span class="text-muted">Laden...</span>
    </div>
}
else
{
    <div class="stats-grid">
        <div class="stat-card primary">
            <div class="stat-label">Benutzer gesamt</div>
            <div class="stat-value">@_stats.TotalUsers</div>
            <div class="stat-subvalue">@_stats.ActiveUsers aktiv</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Kontakte gesamt</div>
            <div class="stat-value">@_stats.TotalContacts</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Shares gesamt</div>
            <div class="stat-value">@_stats.TotalShares</div>
            <div class="stat-subvalue">@_stats.TotalShareViews Aufrufe</div>
        </div>
        <div class="stat-card success">
            <div class="stat-label">Neue Benutzer (24h)</div>
            <div class="stat-value">@_stats.NewUsersLast24Hours</div>
            <div class="stat-subvalue">@_stats.NewUsersLast7Days in letzten 7 Tagen</div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <span>Letzte Aktivitaeten</span>
        </div>
        <div class="card-body">
            @if (_stats.RecentAuditLogs.Count == 0)
            {
                <div class="empty-state">
                    <p>Keine Aktivitaeten vorhanden.</p>
                </div>
            }
            else
            {
                <div class="table-container">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Zeit</th>
                                <th>Aktion</th>
                                <th>Benutzer</th>
                                <th>Entitaet</th>
                                <th>IP</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in _stats.RecentAuditLogs)
                            {
                                <tr>
                                    <td>@log.Timestamp.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <span class="badge @GetActionBadgeClass(log.Action)">@log.Action</span>
                                    </td>
                                    <td>@(log.UserEmail ?? "-")</td>
                                    <td>@(log.EntityType ?? "-") @(log.EntityId != null ? $"({log.EntityId[..Math.Min(8, log.EntityId.Length)]}...)" : "")</td>
                                    <td class="text-muted">@(log.IpAddress ?? "-")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
}

@code {
    private DashboardStats? _stats;

    protected override async Task OnInitializedAsync()
    {
        _stats = await AdminService.GetDashboardStatsAsync();
    }

    private string GetActionBadgeClass(string action)
    {
        return action.ToLower() switch
        {
            "create" or "register" => "badge-success",
            "update" => "badge-warning",
            "delete" => "badge-danger",
            "login" => "badge-primary",
            "logout" => "badge-secondary",
            _ => "badge-secondary"
        };
    }
}

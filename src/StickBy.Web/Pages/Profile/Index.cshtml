@page
@model StickBy.Web.Pages.Profile.IndexModel
@inject ILocalizationService L
@{
    ViewData["Title"] = L["profile.title"];
}

<div class="page-header">
    <h1 class="page-title">@L["profile.title"]</h1>
</div>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
        </svg>
        @Model.SuccessMessage
    </div>
}

@if (Model.Profile != null)
{
    <div class="profile-header">
        <div class="avatar-container" onclick="openImageModal()">
            <div class="avatar large">
                @if (!string.IsNullOrEmpty(Model.Profile.ProfileImageUrl))
                {
                    <img src="@Model.Profile.ProfileImageUrl" alt="@Model.Profile.DisplayName" />
                }
                else
                {
                    @GetInitials(Model.Profile.DisplayName)
                }
            </div>
            <div class="avatar-overlay">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"/>
                    <circle cx="12" cy="13" r="4"/>
                </svg>
            </div>
        </div>
        <div class="profile-name">@Model.Profile.DisplayName</div>
        <div class="profile-email">@Model.Profile.Email</div>
        @if (!string.IsNullOrEmpty(Model.Profile.Bio))
        {
            <div class="profile-bio">@Model.Profile.Bio</div>
        }
        <div class="profile-actions">
            <a href="~/Profile/ReleaseGroups" class="btn-secondary">
                @L["profile.releaseGroups"]
            </a>
        </div>
    </div>

    <!-- Image URL Modal -->
    <div id="imageModal" class="modal" onclick="closeModalOnBackdrop(event)">
        <div class="modal-content">
            <div class="modal-header">
                <h3>@L["profile.changePhoto"]</h3>
                <button type="button" class="btn-icon" onclick="closeImageModal()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"/>
                        <line x1="6" y1="6" x2="18" y2="18"/>
                    </svg>
                </button>
            </div>
            <form method="post" asp-page-handler="UpdateImage">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label">@L["profile.imageUrl"]</label>
                        <input type="url" asp-for="ImageUrl" class="form-control"
                               placeholder="https://example.com/image.jpg"
                               value="@Model.Profile.ProfileImageUrl" />
                        <p class="form-hint">@L["profile.imageUrlHint"]</p>
                    </div>
                    <div class="image-preview" id="imagePreview">
                        @if (!string.IsNullOrEmpty(Model.Profile.ProfileImageUrl))
                        {
                            <img src="@Model.Profile.ProfileImageUrl" alt="Preview" />
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-secondary" onclick="closeImageModal()">@L["common.cancel"]</button>
                    <button type="submit" class="btn-primary">@L["common.save"]</button>
                </div>
            </form>
        </div>
    </div>

    @foreach (var category in Model.Profile.ContactsByCategory.Where(c => c.Value.Any()).OrderBy(c => GetCategoryOrder(c.Key)))
    {
        <div class="category-dropdown">
            <div class="category-header" onclick="toggleCategory(this)">
                <div class="category-title">
                    @GetCategoryDisplayName(category.Key)
                    <span class="category-count">@category.Value.Count</span>
                </div>
                <svg class="category-chevron" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="6 9 12 15 18 9"/>
                </svg>
            </div>
            <div class="category-content">
                @foreach (var contact in category.Value.OrderBy(c => c.SortOrder))
                {
                    <div class="contact-item">
                        <div class="contact-item-content">
                            <span class="contact-label">@contact.Label</span>
                            <span class="contact-value">@contact.Value</span>
                        </div>
                        <div class="release-badges">
                            @if (contact.ReleaseGroups.HasFlag(ReleaseGroup.Family))
                            {
                                <span class="release-badge" title="@L["releaseGroups.family"]">F</span>
                            }
                            @if (contact.ReleaseGroups.HasFlag(ReleaseGroup.Friends))
                            {
                                <span class="release-badge" title="@L["releaseGroups.friends"]">Fr</span>
                            }
                            @if (contact.ReleaseGroups.HasFlag(ReleaseGroup.Business))
                            {
                                <span class="release-badge" title="@L["releaseGroups.business"]">B</span>
                            }
                            @if (contact.ReleaseGroups.HasFlag(ReleaseGroup.Leisure))
                            {
                                <span class="release-badge" title="@L["releaseGroups.leisure"]">L</span>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
}

@functions {
    private string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name)) return "?";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return name[0].ToString().ToUpper();
    }

    private string GetCategoryDisplayName(string key)
    {
        return key switch
        {
            "personal" => L["category.personal"],
            "private" => L["category.private"],
            "business" => L["category.business"],
            "social" => L["category.social"],
            "gaming" => L["category.gaming"],
            _ => L.CurrentLanguage == "de" ? "Allgemein" : "General"
        };
    }

    private int GetCategoryOrder(string key)
    {
        return key switch
        {
            "personal" => 0,
            "private" => 1,
            "business" => 2,
            "social" => 3,
            "gaming" => 4,
            _ => 5
        };
    }
}

<script>
function toggleCategory(header) {
    const content = header.nextElementSibling;
    const chevron = header.querySelector('.category-chevron');
    content.classList.toggle('collapsed');
    chevron.classList.toggle('open');
}

function openImageModal() {
    document.getElementById('imageModal').classList.add('open');
}

function closeImageModal() {
    document.getElementById('imageModal').classList.remove('open');
}

function closeModalOnBackdrop(event) {
    if (event.target.classList.contains('modal')) {
        closeImageModal();
    }
}

// Update preview when URL changes
document.querySelector('input[name="ImageUrl"]')?.addEventListener('input', function(e) {
    const preview = document.getElementById('imagePreview');
    const url = e.target.value;
    if (url) {
        preview.innerHTML = '<img src="' + url + '" alt="Preview" onerror="this.style.display=\'none\'" />';
    } else {
        preview.innerHTML = '';
    }
});
</script>

<style>
    .alert-success {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.2);
        color: var(--success-color);
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
    }
    .avatar-container {
        position: relative;
        cursor: pointer;
    }
    .avatar-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.2s;
        color: white;
    }
    .avatar-container:hover .avatar-overlay {
        opacity: 1;
    }
    .profile-actions {
        display: flex;
        gap: 0.75rem;
        margin-top: 1rem;
    }
    .contact-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--border);
    }
    .contact-item:last-child { border-bottom: none; }
    .contact-item-content {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }
    .contact-label {
        font-size: 0.75rem;
        color: var(--text-muted);
        text-transform: uppercase;
    }
    .contact-value { font-weight: 500; }
    .release-badges {
        display: flex;
        gap: 0.25rem;
    }
    .release-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 24px;
        height: 24px;
        font-size: 0.625rem;
        font-weight: 600;
        background: var(--primary-color);
        color: white;
        border-radius: 4px;
    }
    /* Modal styles */
    .modal {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 1000;
        align-items: center;
        justify-content: center;
        padding: 1rem;
    }
    .modal.open {
        display: flex;
    }
    .modal-content {
        background: var(--surface);
        border-radius: 0.75rem;
        width: 100%;
        max-width: 400px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    }
    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--border);
    }
    .modal-header h3 {
        margin: 0;
        font-size: 1.125rem;
    }
    .modal-body {
        padding: 1.25rem;
    }
    .modal-footer {
        display: flex;
        gap: 0.75rem;
        justify-content: flex-end;
        padding: 1rem 1.25rem;
        border-top: 1px solid var(--border);
    }
    .form-group {
        margin-bottom: 1rem;
    }
    .form-label {
        display: block;
        font-size: 0.875rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }
    .form-control {
        width: 100%;
        padding: 0.625rem 0.875rem;
        border: 1px solid var(--border);
        border-radius: 0.5rem;
        font-size: 0.875rem;
    }
    .form-control:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
    }
    .form-hint {
        font-size: 0.75rem;
        color: var(--text-muted);
        margin-top: 0.5rem;
    }
    .image-preview {
        margin-top: 1rem;
        border-radius: 0.5rem;
        overflow: hidden;
        background: var(--background);
        min-height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .image-preview img {
        max-width: 100%;
        max-height: 200px;
        object-fit: contain;
    }
</style>
